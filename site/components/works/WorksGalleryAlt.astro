---
import SmartBadge from "../../subcomponents/SmartBadge.astro";
---
<div class=" buffer w-full my-c3 buffer grid-[1,1,d6] /lg/ grid-[3,2,d6]">

  <div class="span-[1,2] space-y-d6 col-[center,center] h-full"> <!-- Add h-full if not already present -->
    <div class="flex flex-col w-full flex-1"> <!-- flex-1 ensures equal growth -->
      <div class="relative h-s1 /lg/ flex-grow h-0"> <!-- h-0 with flex-grow for even distribution -->
        <img src="/images/carneyscene.png" alt="Carney Promo" class="w-full h-full object-cover object-center rounded-md">
        <SmartBadge rebrand={1} logo={1}></SmartBadge>
      </div>
      <h4 class="slip text-black text-base mt-d6">Logo & Promotional</h4>
      <h4 class="slip2 text-darkgrey text-base">Carney Bookkeeping</h4>
    </div>
    
    <div class="flex flex-col w-full flex-1"> <!-- flex-1 ensures equal growth -->
      <div class="relative h-s1 /lg/ flex-grow h-0"> <!-- h-0 with flex-grow for even distribution -->
        <img src="/images/bentonsscene.png" alt="Benton's Promo" class="w-full h-full object-cover object-center rounded-md">
        <SmartBadge rebrand={1} ui={1} promo={1}></SmartBadge>
      </div>
      <h4 class="slip text-black text-base mt-d6">Redesigned Website & Social Media</h4>
      <h4 class="slip2 text-darkgrey text-base">Benton's Inc</h4>
    </div>
  </div>


  <div class = "span-[1,1] /lg/ span-[2,2]">
    
    <div class = "h-full flex flex-col">
      <div class = "relative h-s1 w-full /lg/ h-s9 bg-purple rounded-md overflow-hidden">
        <img src="/images/enszscene.png" alt="Ensz Promo" class = "w-full h-full object-cover object-center rounded-md">
        <SmartBadge rebrand={1} promo={1} logo={1}></SmartBadge>
      </div>
      <h4 class = "slip text-black text-base  mt-d6">Logo & Brand Guidelines</h4>
      <h4 class = "slip2 text-darkgrey text-base">Ensz & Sons</h4>
    </div>

  </div>
  


</div>

